<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Tilavarauksen muokkaaminen</h2></div></div></div>
<div class="border">
<% form_for :booking,
   :url => bookings_path(:id => @booking),
   :html => {:method => :put }  do |f| -%>
   
   <%= f.error_messages %>
   
  <p>
    <%= f.label :alkamisaika %>
    <%= f.datetime_select :start_time, 
        :order => [:day, :month, :year], 
        :start_year => Date.today.year,
        :end_year => (Date.today.year+2),
        :use_month_names => %w[tammi helmi maalis huhti touko kes&auml; hein&auml; elo syys loka marras joulu].map{|x| x+"kuu"},
        :minute_step => 30 
    %>
  </p>

  <p>
    <%= f.label :loppumisaika %>
    <%= f.datetime_select :end_time,
        :order => [:day, :month, :year], 
        :start_year => Date.today.year,
        :end_year => (Date.today.year+2),
        :use_month_names => %w[tammi helmi maalis huhti touko kes&auml; hein&auml; elo syys loka marras joulu].map{|x| x+"kuu"},
        :minute_step => 30 
    %>
  </p>
 
  <p>
    <%= f.label :varaaja %>
    <%= f.text_field :reserver %>
  </p>

  <p>
    <%= f.label :puhelin %>
    <%= f.text_field :telephone %>
  </p>

  <p>
    <%= f.label :tilavaraukset %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit 'Muutan varaustiedoja' %>
  </p>
<% end %>
 
</div>
 